{
    "name": "fabb-dev/pattern-lab-php-pattern-data-exporter",
    "description": "Exports pattern data to a file.",
    "type": "patternlab-plugin",
    "authors": [
        {
            "name": "Andy Fowlston",
            "email": "andy@fabbdev.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "FabbDev\\PatternLab\\PatternDataExporter\\": "src/"
        }
    },
    "require": {
        "ext-json": "*",
        "pattern-lab/core": "^2.9"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "patternlab": {
            "config": {
                "plugins": {
                    "patternDataExporter": {
                        "enabled": true,
                        "categories": [
                            "pattern"
                        ],
                        "fields": [
                            "name",
                            "type",
                            "ext",
                            "path",
                            "pathName",
                            "lineages",
                            "lineagesR"
                        ]
                    }
                }
            }
        }
    }
}
